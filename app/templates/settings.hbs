<div class="settings-container">
  <h4> Edit Your Settings </h4>

  {{!-- <div class="settings-row">
    <span>Location</span>
    {{input placeholder="Indianapolis, IN"}}
  </div> --}}

  <div class="settings-row">
    <div class="slider-row">
      <span>Max Distance</span>
      {{range-slider step=10 start=startDistance range=distanceRange on-change=(action "settingChanged" "maxDistance")}}
    </div>
  </div>

  <span class="divider"></span>

  <div class="settings-row">
    <div class="select-row">
      <span>Gender</span>
      <select onchange={{action (action "settingChanged" "gender") value="target.value"}}>
        <option>Men</option>
        <option>Women</option>
        <option>Men & Women</option>
      </select>
    </div>
  </div>

  <span class="divider"></span>

  <div class="settings-row">
    <div class="select-row">
      <span>Energy Level</span>
      <select onchange={{action (action "settingChanged" "energyLevel") value="target.value"}}>
        <option>High</option>
        <option>Medium</option>
        <option>Low</option>
      </select>
    </div>
  </div>

  <span class="divider"></span>

  <div class="settings-row">
    <div class="select-row">
      <span>Vet Verified</span>
      <select onchange={{action (action "settingChanged" "vetVerificationC") value="target.value"}}>
        <option value=true>Yes</option>
        <option value=false>No</option>
      </select>
    </div>
  </div>

  <span class="divider"></span>

  <div class="settings-row">
    <div class="slider-row">
      <span>Age Range</span>
      {{range-slider step=1 start=ageStart range=ageRange on-change=(action "settingChanged" "ageRange")}}
    </div>
  </div>

  <span class="divider"></span>

  {{!-- <h5>Profile Settings</h5>
  <div class="settings-row">
    <span>Username</span>
    {{input placeholder="dogglover222"}}
  </div>

  <div class="settings-row">
    <span>Password</span>
    {{input placeholder="************"}}
  </div> --}}

  {{!-- <h5>Notifications</h5>
  <div class="settings-row">
    <span>New Matches</span>
    {{x-toggle theme='light'}}
  </div>

  <div class="settings-row">
    <span>New Messages</span>
    {{x-toggle theme='light'}}
  </div> --}}
  <button> Save </button>

  <span class="divider"></span>

  <button {{action "signOut"}}>Sign Out</button>
</div>
