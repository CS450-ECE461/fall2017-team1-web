{{#if inMainApp}}
  {{#burger-menu as |burger|}}
    {{#burger.menu gesturesEnabled=false itemTagName="div" as |menu|}}
      <div class="bm-menu-header">
        {{!-- <button class="fa fa-times close-bm" {{action burger.state.actions.close}}></button> --}}

        <div class="top-half">
          {{#menu.item class="avatar-container" dismissOnClick=true}}
            {{#link-to 'users' currentUser.id}}
              <img class="bm-avatar" src="https://cs.iupui.edu/~jbcampbe/cpg926.png" alt="avatar">
            {{/link-to}}
          {{/menu.item}}
          <div class="other-half">
            <span class="username"><strong>{{currentUser.fullName}}</strong></span>

            <div class="badges-friends-container">
              <div>
                {{#menu.item class="friends" dismissOnClick=true}}
                  {{#link-to "friends" class="badges-friends-container-in"}}
                    <i class="fa fa-user"></i>
                    <span><strong>34</strong> friends</span>
                  {{/link-to}}
                {{/menu.item}}
              </div>

              <div class="badges-friends-container-in">
                <i class="fa fa-certificate"></i>
                <span><strong>16</strong> badges</span>
              </div>
            </div>
          </div>
        </div>

        <div class="bottom-half">
          <div>
            <span class="my-dogs">My Dogs</span>
          </div>
          <div class="dogs">
            {{#each currentUser.dog as |dog|}}
              <div class="dog">
                {{#menu.item dismissOnClick=true}}
                  {{#link-to "dogs" dog._id}}
                    <img class="dog-avatar" src="https://cs.iupui.edu/~jbcampbe/cpg927.png" alt="dog-avatar">
                  {{/link-to}}
                {{/menu.item}}
                <span class="dog-name">{{dog.firstName}} {{dog.lastName}}</span>
              </div>
            {{/each}}
            <div class="dog">
              {{#menu.item class="dog-avatar add-dog" dismissOnClick=true}}
                {{link-to "" "settings" class="fa fa-plus"}}
              {{/menu.item}}
            </div>
          </div>
        </div>
      </div>

      <div class="bm-menu-item-container">
        {{#menu.item class="bm-main-menu-item" dismissOnClick=true}}
          {{link-to "profile" "users" currentUser.id}}
        {{/menu.item}}

        {{#menu.item class="bm-main-menu-item" dismissOnClick=true}}
          {{link-to "friends" "friends"}}
        {{/menu.item}}

        {{#menu.item class="bm-main-menu-item" dismissOnClick=true}}
          {{link-to "messaging" "messages"}}
        {{/menu.item}}

        {{#menu.item class="bm-main-menu-item" dismissOnClick=true}}
          {{link-to "stream" "index"}}
        {{/menu.item}}

        {{#menu.item class="bm-main-menu-item" dismissOnClick=true}}
          {{link-to "settings" "settings"}}
        {{/menu.item}}
      </div>
    {{/burger.menu}}

    {{#burger.outlet}}
      <div class="header-bar">
        <div class="header-edge">
          <button class="fa fa-bars menu-toggle" {{action burger.state.actions.toggle}}></button>
        </div>
        <label>Supdog</label>
        <div class="header-edge">
          {{link-to "" "messages" class="fa fa-envelope messages"}}
        </div>
      </div>
      <div class="main-content">
        {{outlet}}
      </div>
      <div class="footer">
        {{link-to 'paw' 'match'}}
      </div>
    {{/burger.outlet}}
  {{/burger-menu}}

{{else}}
  {{outlet}}
{{/if}}
